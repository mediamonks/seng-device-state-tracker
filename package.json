{
  "name": "seng-device-state-tracker",
  "version": "1.2.0",
  "description": "DeviceStateTracker is a utility class that tracks which media query is currently active using the matchMedia API.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "prepublishOnly": "npm-run-all -s validate build",
    "validate": "npm-run-all -p lint test",
    "dev": "npm-run-all -p dev:*",
    "dev:babel": "babel ./src -x \".ts\" --out-dir ./ --watch",
    "dev:ts": "tsc --noEmit --allowJs --watch",
    "build": "npm-run-all -s clean build:*",
    "build:babel": "babel ./src -x \".ts\" -x \".js\" --out-dir ./",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "test": "cross-env NODE_ENV=test nyc --all mocha \"./test/**/*.spec.{ts,js}\"",
    "test:dev": "mocha -w --watch-extensions ts,js \"./test/**/*.spec.{ts,js}\"",
    "clean": "npm-run-all clean:*",
    "clean:test": "shx rm -rf coverage .nyc_output",
    "clean:npm": "shx rm -rf lib tmp index.js index.d.ts",
    "doc": "npm-run-all -p doc:*",
    "doc:typedoc": "typedoc --out docs/ src/ --mode file",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src --ext .js --cache",
    "lint:ts": "tslint src/**/*.ts -c tslint.json -p tsconfig.json -t verbose",
    "prettify": "prettier --write \"src/**/*.{js,ts,json}\""
  },
  "scriptsComment": {
    "validate": "Runs all scripts that validate if the contents of this repos is correct",
    "dev": "Compiles browser dist bundle with webpack and starts server",
    "dev:babel": "Watch and compile JavaScript files",
    "dev:ts": "Watch and compile TypeScript files",
    "build": "Cleans and compiles everything",
    "build:babel": "Comples all JavaScript source files",
    "build:ts": "Compiles all TypeScript source files",
    "test": "Runs unit tests using Mocha",
    "test:dev": "Runs unit tests using Mocha (with watch mode enabled)",
    "clean": "Runs all clean:* tasks",
    "clean:test": "Remove all test artifacts",
    "clean:npm": "Remove all npm artifacts",
    "doc": "Runs all doc:* tasks",
    "doc:typedoc": "Generate TypeScript documentation",
    "lint": "Runs all lint:* tasks",
    "lint:js": "Lints the source files using eslint",
    "lint:ts": "Lints the source files using tslint",
    "prettify": "Reformat JavaScript/TypeScript/JSON files using prettier"
  },
  "pre-push": [
    "validate"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.js": [
        "npm run lint:js"
      ],
      "src/**/*.ts": [
        "npm run lint:ts"
      ]
    }
  },
  "author": "Jesse Linthorst <jesse@mediamonks.com> (jesse-mm)",
  "homepage": "https://www.mediamonks.com/",
  "license": "MIT",
  "keywords": [
    "seng",
    "mediamonks",
    "matchmedia"
  ],
  "bugs": {
    "url": "https://github.com/mediamonks/seng-device-state-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mediamonks/seng-device-state-tracker.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.35",
    "@babel/core": "^7.0.0-beta.35",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.35",
    "@babel/preset-env": "^7.0.0-beta.35",
    "@babel/preset-stage-3": "^7.0.0-beta.35",
    "@babel/preset-typescript": "^7.0.0-beta.35",
    "@babel/register": "^7.0.0-beta.35",
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.1.2",
    "@types/sinon-chai": "^2.7.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "chai": "^4.1.2",
    "coveralls": "^2.11.6",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^1.1.2",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^6.0.0",
    "match-media-mock-patched": "^0.1.1",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.3.0",
    "prettier": "^1.9.2",
    "shx": "^0.2.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.35",
    "seng-event": "^1.2.3"
  }
}
